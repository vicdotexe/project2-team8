<div id="dashboard">
    <div id="sidebar">
        <a href="/addartpiece"><button id="addWorkBtn">Add New Work</button></a>
        <br>
        <a href="/search?likedby={{activeUser.id}}"><button id="addWorkBtn">My Liked Art</button></a>
        <div>
            <h5>Watching:</h5>
            <div class="d-flex flex-column">
                {{#each following as |watched|}}
                <a href="/search?userid={{watched.id}}">{{watched.username}}</a>
                {{/each}}
            </div>
        </div>

        <div>
            <h5>Followed By</h5>
            <div class="d-flex flex-column">
                {{#each followers as |follower|}}
                <a href="/search?userid={{follower.id}}">{{follower.username}}</a>
                {{/each}}
            </div>
        </div>

    </div>

    <div class="artpieces-container" id="dashboard-gallery">
        {{#each artPieces as |artPiece|}}
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div id="artpieces-container">
                {{>art-preview-card artPiece}}
            </div>
            <div>
                <button id="editBtn">Edit</button>
                <button class="removeBtn" artPId="{{artPiece.id}}">Remove</button>
            </div>
        </div>
        {{/each}}
    </div>

</div>

<script src="/js/delete-artpiece-script.js"></script>