<div class="art-piece">
<div class="w-full flex flex-col items-center mt-5">
    <div class="w-[75%] flex flex-col items-center">
        <img class="max-w-fit mb-7" src="{{artPiece.path}}" > 

    <div class="image-info">
        <h3 class="art-name">Piece name: {{artPiece.name}}</h3>
        <div class="like-buttons">
            <button id="likeButton" data-artId="{{artPiece.id}}" class="btn 300" type="submit" data-liked="{{isLiked}}">
            {{#if isLiked}}
            Unlike
            {{else}}
            Like
            {{/if}}
            </button>
            <button class="like-count-button" LikeCount:{{artPiece.Likes.length}}>
            </button>
        </div>
    </div>
    <div class="artist-name-keyword">
        <h3>Artist:{{artPiece.User.username}} </h3>
        <div class="art-piece-keyword">Keywords:
        {{#each artPiece.Keywords as |keyword|}}
        {{keyword.name}}
        {{/each}}
    </div>

      
        {{!-- <h3>Genre of art:{{artPiece.genre}}</h3> --}}
    </div>
    <div class="art-description">Description:
        <p>{{artPiece.description}}
        </p>
    </div>


    <div class="input-group">
    <div class="input-group-prepend-comment">
        <textarea id="commentInput" class="form-control" aria-label="With textarea"></textarea>
    </div>
    </div>
    <div>
        <button id="submitCommentButton" artId="{{artPiece.id}}" class="input-group-text-comment">Add Comment</button>
    </div>


    <div class="recent-comments">Recent comments:
        <ul>
            {{#each artPiece.Comments as |comment|}}
                <li>
                    <div>
                        <h6>From: {{comment.User.username}}</h4>
                        <p>{{comment.content}}</p>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    </div>
</div>
</div>

<script src="/js/commentSubmission.js" ></script>
<script src="/js/likeHandler.js" ></script>